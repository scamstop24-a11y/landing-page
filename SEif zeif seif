    <script>
        const modalBg = document.getElementById('modal-bg');
        const loginStatus = document.getElementById('login-status');
        const showSigninLink = document.getElementById('show-signin');
        const showSigninIcon = document.getElementById('show-signin-icon');
        const closeModalBtn = document.getElementById('close-modal');
        const loginForm = document.getElementById('login-form');
        const togglePasswordBtn = document.getElementById('toggle-password');
        const passwordInput = document.getElementById('password');

        showSigninLink.onclick = function(e){
            e.preventDefault();
            modalBg.style.display = 'flex';
        };
        showSigninIcon.onclick = function(){
            modalBg.style.display = 'flex';
        };

        closeModalBtn.onclick = function(){
            modalBg.style.display = 'none';
        };
        modalBg.onclick = function(e){
            if (e.target === modalBg) {
                modalBg.style.display = 'none';
            }
        };

        togglePasswordBtn.onclick = function(){
            const isHidden = passwordInput.type === 'password';
            passwordInput.type = isHidden ? 'text' : 'password';
            togglePasswordBtn.textContent = isHidden ? 'Hide' : 'Show';
        };

        loginForm.onsubmit = function(e){
            e.preventDefault();
            const user = document.getElementById('username').value.trim();
            if (user) {
                loginStatus.textContent = 'Logged in as: ' + user;
            } else {
                loginStatus.textContent = 'You are logged in.';
            }
            alert("Sign in submitted! (Demo only)");
            modalBg.style.display = 'none';
        };
    </script>
